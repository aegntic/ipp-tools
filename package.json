{
  "name": "ipp-tools",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "packages/*",
    "sites/*"
  ],
  "scripts": {
    "start": "npx lerna run start --parallel",
    "dev": "npx lerna run dev --scope=ipp-main --stream",
    "dev:ipp": "npx lerna run dev --scope=ipp-main --stream",
    "dev:cascadevibe": "npx lerna run dev --scope=cascadevibe --stream",
    "prebuild": "npm run generate:visualizations",
    "build": "npx lerna run build",
    
    "build:ipp": "node scripts/deploy.js",
    "build:ipp:direct": "npx lerna run build --scope=ipp-main",
    
    "build:cascadevibe": "node scripts/deploy.js",
    "build:cascadevibe:direct": "npm run generate:visualizations:cascadevibe && npx lerna run build --scope=cascadevibe",
    
    "build:neuralnarrative": "node scripts/deploy.js",
    "build:neuralnarrative:direct": "npx lerna run build --scope=neuralnarrative",
    
    "build:primalposition": "node scripts/deploy.js",
    "build:primalposition:direct": "npx lerna run build --scope=primalposition",
    
    "build:quantumconversion": "node scripts/deploy.js",
    "build:quantumconversion:direct": "npx lerna run build --scope=quantumconversion",
    
    "build:all": "npm run generate:visualizations:all && npx lerna run build",
    "deploy": "node scripts/deploy.js",
    "test": "npx lerna run test",
    "clean": "npx lerna clean",
    "bootstrap": "npx lerna bootstrap",
    "lint": "eslint .",
    "generate:visualizations": "node scripts/visualization/generate-glass-visualizations.js",
    "generate:visualizations:ipp": "node scripts/visualization/generate-glass-visualizations.js -o sites/ipp-main/public/assets/visualizations",
    "generate:visualizations:cascadevibe": "node scripts/visualization/generate-glass-visualizations.js -o sites/cascadevibe/public/assets/visualizations",
    "generate:visualizations:all": "npm run generate:visualizations && npm run generate:visualizations:ipp && npm run generate:visualizations:cascadevibe",
    "postinstall": "npm install -g lerna@8.1.2"
  },
  "dependencies": {
    "@svgdotjs/svg.js": "^3.2.0",
    "commander": "^11.1.0",
    "prop-types": "^15.8.1",
    "svgdom": "^0.1.17"
  },
  "devDependencies": {
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-react": "^7.34.0",
    "husky": "^9.0.11",
    "lerna": "^8.1.2",
    "lint-staged": "^15.2.2",
    "prettier": "^3.2.5"
  },
  "engines": {
    "node": ">=16.0.0"
  }
}