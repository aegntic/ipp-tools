{
  "name": "ipp-tools",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "packages/*",
    "sites/*"
  ],
  "scripts": {
    "start": "lerna run start --parallel",
    "dev": "lerna run dev --scope=ipp-main --stream",
    "dev:ipp": "lerna run dev --scope=ipp-main --stream",
    "dev:cascadevibe": "lerna run dev --scope=cascadevibe --stream",
    "prebuild": "npm run generate:visualizations",
    "build": "lerna run build",
    "build:ipp": "node scripts/deploy.js",
    "build:cascadevibe": "npm run generate:visualizations:cascadevibe && lerna run build --scope=cascadevibe",
    "build:all": "npm run generate:visualizations:all && lerna run build",
    "deploy": "node scripts/deploy.js",
    "test": "lerna run test",
    "clean": "lerna clean",
    "bootstrap": "lerna bootstrap",
    "lint": "eslint .",
    "generate:visualizations": "node scripts/visualization/generate-glass-visualizations.js",
    "generate:visualizations:ipp": "node scripts/visualization/generate-glass-visualizations.js -o sites/ipp-main/public/assets/visualizations",
    "generate:visualizations:cascadevibe": "node scripts/visualization/generate-glass-visualizations.js -o sites/cascadevibe/public/assets/visualizations",
    "generate:visualizations:all": "npm run generate:visualizations && npm run generate:visualizations:ipp && npm run generate:visualizations:cascadevibe"
  },
  "dependencies": {
    "@svgdotjs/svg.js": "^3.2.0",
    "commander": "^11.1.0",
    "prop-types": "^15.8.1",
    "svgdom": "^0.1.17"
  },
  "devDependencies": {
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-react": "^7.34.0",
    "husky": "^9.0.11",
    "lerna": "^8.1.2",
    "lint-staged": "^15.2.2",
    "prettier": "^3.2.5"
  }
}
